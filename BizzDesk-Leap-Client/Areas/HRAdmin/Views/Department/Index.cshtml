@model BizzDesk_Leap_Client.Areas.HRAdmin.Models.DepartmentClient
@using PagedList;
@using PagedList.Mvc

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Departments";
    int x = 1;
}


<section class="content-header">
<h1> @ViewBag.Title </h1>

<ol class="breadcrumb">
    <li>
        <a href="#">
            <i class="fa fa-dashboard"></i>
            Home
        </a>
    </li>
    <li class="active">
        Department
    </li>
</ol>
</section>

<section class="content">
    <div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title"></h3>
                
                <div class="pull-left">
                    <a class="btn btn-info btn-sm" data-modal="" href="@Url.Action("Create", "Department", new { Area = "HRAdmin"})"><i class="fa fa-plus"></i> Create Department</a>
                </div>

                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>
                        <th>S/N</th>
                        <th>Title</th>
                        <th></th>
                    </tr>

                @foreach (var dept in ViewBag.DepartmentList)
                { 
                    <tr>
                        <td>@(x++)</td>
                        <td>@dept.Title</td>
                        <td> <a class="btn btn-success btn-xs" data-modal="" href="@Url.Action("Edit", "Department", new { Area = "HRAdmin", id = dept.ID})"><i class="fa fa-pencil"></i> Edit </a>
                            <a class="btn btn-danger btn-xs" href="#"><i class="fa fa-trash"></i> Delete </a>
                        </td>
                    </tr>
                }
                </table>
                <div style="padding-left: 15px">
                    @Html.PagedListPager((IPagedList)ViewBag.DepartmentList, page => Url.Action("Index", "Department", new { Area = "HRAdmin", page }))
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

    <!-- modal placeholder-->
    <div id='myModal' class='modal modal-primary fade in'>
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-content" id='myModalContent'></div>
            </div>
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script type="text/javascript" src="~/Scripts/modal.js"></script>
    }

</section>