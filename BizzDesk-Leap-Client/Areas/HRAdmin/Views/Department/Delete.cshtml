@model BizzDesk_Leap_Client.Areas.HRAdmin.ViewModels.DepartmentViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title"><b>Delete Department</b></h4>
</div>

@using (Html.BeginForm("Delete", "Department", new { Area = "HRAdmin"}))
{
    @Html.AntiForgeryToken()
    
    <div class="modal-body">
        <div class="form-horizontal">

            <div class="form-group">
                <div class="col-sm-3">
                    Are you sure to delete this?
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
        <input type="submit" class="btn btn-outline" value="Save"/>
    </div>
}

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>
