@model BizzDesk_Leap_Client.Areas.HRAdmin.ViewModels.EmployeeViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title"><b>Employee Details</b></h4>
</div>
    <div class="modal-body">
        <dl class="dl-horizontal">

                <dt> Employee ID: </dt>
                <dd> @Html.DisplayFor(model => model.Employee.EmployeeID)</dd>
                <dt> Last Name: </dt>
                <dd> @Html.DisplayFor(model => model.Employee.LastName)</dd>
                <dt> Middle Name: </dt>
                <dd> @Html.DisplayFor(model => model.Employee.MiddleName)</dd>
                <dt> First Name: </dt>
                <dd> @Html.DisplayFor(model => model.Employee.FirstName)</dd>
                <dt> Gender: </dt>
                <dd> @Html.DisplayFor(model => model.Employee.Gender)</dd>
                <dt> Date of Birth: </dt>
                <dd> @Html.DisplayFor(model => model.Employee.DOB)</dd>
                <dt> Date of Appointment: </dt>
                <dd> @Html.DisplayFor(model => model.Employee.AppointmentDate)</dd>
                <dt> Department: </dt>
                <dd> @Html.DisplayFor(model => model.Employee.Department.Title)</dd>
                <dt> Rank: </dt>
                <dd> @Html.DisplayFor(model => model.Employee.Rank.Title)</dd>
                <dt> E-mail Address: </dt>
                <dd> @Html.DisplayFor(model => model.Employee.Email)</dd>
                <dt> Address: </dt>
                <dd> @Html.DisplayFor(model => model.Employee.Address)</dd>
                <dt> Phone Number: </dt>
                <dd> @Html.DisplayFor(model => model.Employee.PhoneNo)</dd>
        </dl>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
    </div>

