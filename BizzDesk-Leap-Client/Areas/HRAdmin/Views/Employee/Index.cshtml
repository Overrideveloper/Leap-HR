@model BizzDesk_Leap_Client.Areas.HRAdmin.Models.EmployeeClient
@using PagedList;
@using PagedList.Mvc

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Employees";
    int x = 1;
    var y = Convert.ToInt32(Session["count"]);
}

@section menu{
    <li><a href="@Url.Action("Index", "Dashboard", new { Area = "HRAdmin"})"><i class="fa fa-home"></i> <span>Dashboard</span></a></li>
    <li><a href="@Url.Action("Index", "Department", new { Area = "HRAdmin"})"><i class="fa fa-users"></i> <span>Departments</span></a></li>
    <li><a href="@Url.Action("Index", "Rank", new { Area = "HRAdmin"})"><i class="fa fa-star-o"></i> <span>Ranks</span></a></li>
    <li class="active"><a href="@Url.Action("Index", "Employee", new { Area = "HRAdmin"})"><i class="fa fa-user"></i> <span>Employees</span></a></li>
    <li><a href="@Url.Action("Index", "Leave", new { Area = "HRAdmin"})"><i class="fa fa-sign-out"></i> <span>Leaves</span></a></li>
    <li><a href="@Url.Action("Index", "Request", new { Area = "HRAdmin"})"><i class="fa fa-paper-plane"></i><span>Leave Requests </span>
    @if (y != 0){<span class="label label-warning pull-right">@y</span>}</a>
}

<section class="content-header">
    <h1> @ViewBag.Title </h1>

    <ol class="breadcrumb">
        <li>
            <a href="#">
                <i class="fa fa-dashboard"></i>
                Home
            </a>
        </li>
        <li class="active">
            <a href="@Url.Action("Index", "Employee", new { Area = "HRAdmin"})">
                <i class="fa fa-user"></i>
                Employee
            </a>
        </li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"></h3>

                    <div class="pull-left">
                        <a class="btn btn-info btn-sm" data-modal="" href="@Url.Action("Create", "Employee", new { Area = "HRAdmin"})"><i class="fa fa-plus"></i> Create Employee</a>
                    </div>

                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <a class="form-control btn btn-default pull-right" href="@Url.Action("Search", "Employee", new { Area = "HRAdmin"})"><i class="fa fa-search"></i> Search </a>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tr>
                            <th></th>
                            <th>S/N</th>
                            <th>ID</th>
                            <th>Last Name</th>
                            <th>First Name</th>
                            <th>Gender</th>
                            <th>Department</th>
                            <th>Rank</th>
                            <th>Options</th>
                        </tr>

                        @foreach (var emp in ViewBag.EmployeeList)
                        {
                            <tr>
                                <td></td>
                                <td>@(x++)</td>
                                <td>@emp.EmployeeNumber</td>
                                <td>@emp.LastName</td>
                                <td>@emp.FirstName</td>
                                <td>@emp.Gender</td>
                                <td>@emp.Department.Title</td>
                                <td>@emp.Rank.Title</td>
                                <td>
                                    <a class="btn btn-success btn-xs" data-modal="" href="@Url.Action("Edit", "Employee", new { Area = "HRAdmin", id = emp.ID})"><i class="fa fa-pencil"></i> Edit </a>
                                    <a class="btn btn-danger btn-xs delete" href="@Url.Action("Delete", "Employee", new { Area = "HRAdmin", id = emp.ID})"><i class="fa fa-trash"></i> Delete </a>
                                    <a class="btn btn-info btn-xs" data-modal="" href="@Url.Action("Details", "Employee", new { Area = "HRAdmin", id = emp.ID})"><i class="fa fa-th-list"></i> Details </a>
                                </td>
                            </tr>
                        }
                    </table>
                    <div style="padding-left: 15px">
                        @Html.PagedListPager((IPagedList)ViewBag.EmployeeList, page => Url.Action("Index", "Employee", new { Area = "HRAdmin", page }))
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

    <!-- modal placeholder-->
    <div id='myModal' class='modal modal-primary fade in'>
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-content" id='myModalContent'></div>
            </div>
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script type="text/javascript" src="~/Scripts/modal.js"></script>
        <script type="text/javascript" src="~/Scripts/delete-modal.js"></script>
    }

</section>
