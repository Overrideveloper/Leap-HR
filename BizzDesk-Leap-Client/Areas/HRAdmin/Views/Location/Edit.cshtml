@model BizzDesk_Leap_Client.Areas.HRAdmin.ViewModels.LocationViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title"><b>Edit Location - @Model.Location.Title</b></h4>
</div>

@using (Html.BeginForm("Edit", "Location", new { Area = "HRAdmin" }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => Model.Location.ID)
    
    <div class="modal-body">
        <div class="form-horizontal">

            <div class="form-group">
                <label for="title" class="control-label col-sm-3"> Title </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => Model.Location.Title, new { @class = "form-control border-input required", @id = "title" })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model => model.Location.Title)
                    </div>
                </div>
            </div>


            <div class="form-group">
                <label for="state" class="control-label col-sm-3"> State </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => Model.Location.State, new { @class = "form-control border-input required", @id = "state" })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model => model.Location.State)
                    </div>
                </div>
            </div>


            <div class="form-group">
                <label for="lga" class="control-label col-sm-3"> LGA </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => Model.Location.LGA, new { @class = "form-control border-input required", @id = "lga" })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model => model.Location.LGA)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="address" class="control-label col-sm-3"> Address </label>
                <div class="col-sm-9">
                    @Html.TextAreaFor(model => Model.Location.Address, new { @class = "form-control border-input required", @id = "address" })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model => model.Location.Address)
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>

        <span id="progress" class="text-center" style="display:none">
            <strong>Processing..</strong>
        </span>

        <input type="submit" class="btn btn-outline" value="Save" />
    </div>
}

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>

