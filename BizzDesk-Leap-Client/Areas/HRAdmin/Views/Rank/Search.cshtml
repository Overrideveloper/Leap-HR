@model BizzDesk_Leap_Client.Areas.HRAdmin.ViewModels.RankViewModel

@{
    ViewBag.Title = "Search Rank";
    int x = 1;
}

@section menu{
    <li class=""><a href="@Url.Action("Index", "Dashboard", new { Area = "HRAdmin"})"><i class="fa fa-home"></i> <span>Dashboard</span></a></li>
    <li>
    <a href="@Url.Action("Index", "Department", new { Area = "HRAdmin"})">
        <i class="fa fa-users"></i> <span>Departments</span>
        @if (ViewBag.DepartmentCount != 0)
        {<span class="badge label-default pull-right">@ViewBag.DepartmentCount</span>}
    </a>
    </li>
    <li class="active">
        <a href="@Url.Action("Index", "Rank", new { Area = "HRAdmin"})">
            <i class="fa fa-star-o"></i> <span>Ranks</span>
            @if (ViewBag.RankCount != 0)
            {<span class="badge label-info pull-right">@ViewBag.RankCount</span>}
        </a>
    </li>
    <li>
        <a href="@Url.Action("Index", "Employee", new { Area = "HRAdmin"})">
            <i class="fa fa-user"></i> <span>Employees</span>
            @if (ViewBag.EmployeeCount != 0)
            {<span class="badge label-primary pull-right">@ViewBag.EmployeeCount</span>}
        </a>
    </li>
    <li>
        <a href="@Url.Action("Index", "Leave", new { Area = "HRAdmin"})">
            <i class="fa fa-sign-out"></i> <span>Leaves</span>
            @if (ViewBag.LeaveCount != 0)
            {<span class="badge label-success pull-right">@ViewBag.LeaveCount</span>}
        </a>
    </li>
    <li class="active">
    <a href="@Url.Action("Index", "Request", new { Area = "HRAdmin"})">
        <i class="fa fa-paper-plane"></i><span>Leave Requests </span>
        @if (ViewBag.RequestCount != 0)
        {<span class="label label-warning pull-right">@ViewBag.RequestCount</span>}
    </a>
</li>
    <li class="header">ADMIN</li>
    <li>
        <a href="@Url.Action("Index", "Role", new { Area = "HRAdmin"})">
            <i class="fa fa-user"></i> <span>Manage User Roles</span>
            @if (ViewBag.RoleCount != 0)
            {<span class="badge label-danger pull-right">@ViewBag.RoleCount</span>}
        </a>
    </li>
    }

<section class="content-header">
    <h1> @ViewBag.Title </h1>

    <ol class="breadcrumb">
        <li>
            <a href="#">
                <i class="fa fa-dashboard"></i>
                Home
            </a>
        </li>
        <li>
            <a href="@Url.Action("Index", "Rank", new { Area = "HRAdmin"})">
                <i class="fa fa-star"></i>
                Ranks
            </a>
        </li>
        <li class="active">
            <a>
                <i class="fa fa-search"></i>
                Search
            </a>
        </li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                @using (Html.BeginForm("Search", "Rank", new { Area = "HRAdmin" }, FormMethod.Post))
                {
                    <div class="box-header">
                        <h3 class="box-title"></h3>
                        <div class="pull-left">
                            <a class="btn btn-info btn-sm" href="@Url.Action("Index", "Rank", new { Area = "HRAdmin"})"><i class="fa fa-backward"></i> Return to Rank List</a>
                        </div>

                        <div class="box-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                @Html.TextBoxFor(m => m.Rank.Title, new { @placeholder = "Search", @class = "form-control pull-right", @name = "table_search", @type = "text" })
                                <div class="input-group-btn">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tr>
                                <th></th>
                                <th>S/N</th>
                                <th>Title</th>
                                <th>Department</th>
                                <th>Options</th>
                            </tr>
                            @if (ViewBag.Result != null)
                            {
                                foreach (var rank in ViewBag.Result)
                                {
                                    <tr>
                                        <td></td>
                                        <td>@(x++)</td>
                                        <td>@rank.Title</td>
                                        <td>@rank.Department.Title</td>
                                        <td>
                                            <a class="btn btn-success btn-xs" data-modal="" href="@Url.Action("Edit", "Rank", new { Area = "HRAdmin", id = rank.ID })"><i class="fa fa-pencil"></i> Edit </a>
                                            <a class="btn btn-danger btn-xs delete" href="@Url.Action("Delete", "Rank", new { Area = "HRAdmin", id = rank.ID })"><i class="fa fa-trash"></i> Delete </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                    </div>
                <!-- /.box-body -->
                }
            </div>
            <!-- /.box -->
        </div>
    </div>

    <!-- modal placeholder-->
    <div id='myModal' class='modal modal-primary fade in'>
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-content" id='myModalContent'></div>
            </div>
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script type="text/javascript" src="~/Scripts/modal.js"></script>
        <script type="text/javascript" src="~/Scripts/delete-modal.js"></script>
    }

</section>
