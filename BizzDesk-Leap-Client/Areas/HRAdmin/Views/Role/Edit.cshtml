@model BizzDesk_Leap_Client.Areas.HRAdmin.ViewModels.RoleViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title"><b>Edit User Role - @Model.Role.Title</b></h4>
</div>

@using (Html.BeginForm("Edit", "Role", new { Area = "HRAdmin" }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => Model.Role.ID)

    <div class="modal-body">
        <div class="form-group row">   
            <div class="col-sm-9">
                <label for="title" class="control-label col-sm-3"> Title </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(model => Model.Role.Title, new { @class = "form-control border-input required", @id = "title" })
                    <div class="text-danger">
                        @Html.ValidationMessageFor(model => model.Role.Title)
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <label class="control-label col-sm-3"> Manage Departments </label>
                <div class="col-sm-9">
                    @Html.EditorFor(model => Model.Role.CanManageDepartments)
                </div>
            </div>

            <div class="col-sm-6">
                <label class="control-label col-sm-3"> Manage Employees </label>
                <div class="col-sm-9">
                    @Html.EditorFor(model => Model.Role.CanManageEmployees)
                </div>
            </div>

            <div class="col-sm-6">
                <label class="control-label col-sm-3"> Manage Leaves </label>
                <div class="col-sm-9">
                    @Html.EditorFor(model => Model.Role.CanManageLeaves)
                </div>
            </div>

            <div class="col-sm-6">
                <label class="control-label col-sm-3"> Manage Ranks </label>
                <div class="col-sm-9">
                    @Html.EditorFor(model => Model.Role.CanManageRanks)
                </div>
            </div>

            <div class="col-sm-6">
                <label class="control-label col-sm-3"> Manage Requests </label>
                <div class="col-sm-9">
                    @Html.EditorFor(model => Model.Role.CanManageRequests)
                </div>
            </div>

            <div class="col-sm-6">
                <label class="control-label col-sm-3"> Manage Roles </label>
                <div class="col-sm-9">
                    @Html.EditorFor(model => Model.Role.CanManageRoles)
                </div>
            </div>

            <div class="col-sm-6">
                <label class="control-label col-sm-3"> Manage Users </label>
                <div class="col-sm-9">
                    @Html.EditorFor(model => Model.Role.CanManageUsers)
                </div>
            </div>
        </div>
    </div>
    
    <div class="modal-footer">
        <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>

        <span id="progress" class="text-center" style="display:none">
            <strong>Processing..</strong>
        </span>

        <input type="submit" class="btn btn-outline" value="Save" />
    </div>
}

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>